@model IEnumerable<ToDoWebApplication.Models.ToDo>

@{
    ViewData["Title"] = "All To Do's";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-info">All To Do's</h1>
            <hr />
        </div>
    </div>
    <div class="row mt-2 d-flex align-items-center justify-content-center">
        <div class="col-md-10">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Board)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Updated)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.Board.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Updated)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No related To Do's found. <a asp-action="Index" class="btn btn-sm btn-secondary">Go Back</a>
                </div>
            }
        </div>
    </div>
</div>

