@model IEnumerable<ToDoWebApplication.Models.Board>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-info">All Boards</h1>
            <hr />
        </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-8">
            <a asp-action="Create" class="btn btn-outline-success btn-sm">Create New</a>
        </div>
    </div>
    <div class="row mt-2 d-flex align-items-center justify-content-center">
        <div class="col-md-8">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-hover table-striped w-100">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>To Do's</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a asp-action="DisplayAll" asp-controller="Board" asp-route-id="@item.Id" class="btn btn-success btn-sm">All To Do's</a> |
                                    <a asp-action="DisplayPending" asp-controller="Board" asp-route-id="@item.Id" class="btn btn-success btn-sm">Pending To Do's</a>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No boards found.You need to add one.
                </div>
            }
        </div>
    </div>
</div>


