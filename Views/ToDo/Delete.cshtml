@model ToDoWebApplication.Models.ToDo

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-info">Delete</h1>
            <hr />
            <h3 class="text-center text-warning">Are you sure you want to delete this?</h3>
        </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-4">
            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Title)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Status)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Board)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Board.Name)
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
            <a asp-action="Index" class="btn btn-warning btn-sm">Back to List</a>
        </form>
    </div>
</div>
