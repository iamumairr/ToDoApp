@model ToDoWebApplication.Models.ToDo

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-info">Add To Do</h1>
            <hr />
        </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BoardId" class="control-label"></label>
                    <select asp-for="BoardId" class="form-control" asp-items="ViewBag.BoardId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary btn-sm" />
                    <a asp-action="Index" class="btn btn-warning btn-sm">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
